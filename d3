#include <stdio.h>

int missingNumber(int arr[], int n_minus_one) {
    int n = n_minus_one + 1;
    long long expected_sum = (long long)n * (n + 1) / 2;
    long long actual_sum = 0;
    
    for (int i = 0; i < n_minus_one; i++) {
        actual_sum += arr[i];
    }
    
    return (int)(expected_sum - actual_sum);
}

int main() {
    int arr1[] = {1, 2, 3, 5};
    printf("%d\n", missingNumber(arr1, 4));
    
    int arr2[] = {8, 2, 4, 5, 3, 7, 1};
    printf("%d\n", missingNumber(arr2, 7));
    
    int arr3[] = {1};
    printf("%d\n", missingNumber(arr3, 1));
    
    return 0;
}
